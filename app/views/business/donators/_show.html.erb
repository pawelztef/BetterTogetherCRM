<div id="donatorModal">
  <div class="modal fade" id="donatorShowModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <div class="row">
            <div class="col-xs-12">
              <div class="containter">
                <div class="row">
                  <div class="col-sm-12">
                    <button type="button" class="closeDonatorShowModal close">x</button>
                  </div>
                </div>
                <div class="row content">
                  <div class="col-md-12">
                    <h3> Donator </h3>
                    <p> <strong>First name:</strong> <%= @donator.first_name %> </p>
                    <p> <strong>Last name:</strong> <%= @donator.last_name %> </p>
                    <p> <strong>Email:</strong> <%= @donator.email %> </p>
                    <p> <strong>Phone1:</strong> <%= @donator.phone1 %> </p>
                    <p> <strong>Phone2:</strong> <%= @donator.phone2 %> </p>
                    <p> <strong>Address:</strong> <%= @donator.location.full_street_address %> </p>
                    <p> <strong>Coordinates:</strong> <%= @donator.location.latitude %> <%= @donator.location.longitude %> </p>

                    <h3> Donator Donations </h3>
                    <table class="table table-striped table-responsive table-hover">
                      <thead>
                        <tr>
                          <th>Transaction id </th>
                          <th>Amount </th>
                          <th>Date </th>
                          <th colspan="2">Actions </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @donations.each do |business_donation| %>
                          <tr>
                            <td> <%= business_donation.transaction_id %> </td>
                            <td> <%= business_donation.amount %> </td>
                            <td> <%= business_donation.created_at %> </td>
                            <td>
                              <%= link_to 'edit', edit_business_donation_path(business_donation) %> |
                              <%= link_to 'destroy', business_donation_path(business_donation), method: :delete, data: { confirm: 'are you sure?' } %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                    <p> 
                    <%= link_to 'Back', business_donators_path, class: "closeDonatorShowModal" %>
                    </p>
                    <br />
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <button type="button" class="closeDonatorShowModal btn btn-default">close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
