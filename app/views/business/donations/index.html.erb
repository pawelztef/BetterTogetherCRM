<p id="notice"><%= notice %></p>

<h1>Listing Business Donations</h1>

<table id="donations-table" class="table table-striped table-responsive table-hover">
  <thead>
    <tr>
      <th>Transaction id </th>
      <th>Amount </th>
      <th>Donator </th>
      <th>Date </th>
      <th>Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @business_donations.each do |business_donation| %>
      <tr>
        <td> <%= business_donation.transaction_id %> </td>
        <td> <%= business_donation.amount %> </td>
        <td> <%= business_donation.donator.fullname %> </td>
        <td> <%= business_donation.created_at %> </td>
        <td>
          <%= link_to 'Show', business_donation_path(business_donation), remote: true %> 
          <%= link_to 'edit', edit_business_donation_path(business_donation) %> 
          <%= link_to 'destroy', business_donation_path(business_donation), method: :delete, data: { confirm: 'are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Donation', new_business_donation_path %>
<br>
<%= link_to 'Download data in CSV format', business_donations_path(format: "csv") %> 
<br>
<%= link_to 'Import data in CSV format', new_business_donations_import_path %> 

 
