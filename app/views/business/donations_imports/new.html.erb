<div class="tables-wrapper">
  <div class="imports-panel">
    <div class="col-md-12">
      <div class="white-panel pn">
        <div class="white-header">
          <h1> <i class="fa fa-chevron-right" aria-hidden="true"></i>Donations Import <h1>
        </div>
        <ul class="nav">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: 'nav-link' %> 
          </li>
          <li class="nav-item">
            <%= link_to "Back", business_donations_path, class: 'nav-link' %> 
          </li>
        </ul>
        <div class="row">
          <div class="col-md-12">
            <%= form_for [:business, @donations_import] do |f| %>
              <%= render "application_partials/imports_flashes", import_objects: @donations_import %>
              <div class="well">
                <div class="row">
                  <%= render "application_partials/import_info", klass: 'DonationsImport' %>
                  <%= f.file_field :file, class: "file-selection" %> 
                </div>
              </div>
              <%= f.submit "Upload File", class: 'btn btn-default import' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

