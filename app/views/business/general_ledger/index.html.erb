<div class="tables-wrapper">
  <div class="white-panel pn">
    <div class="white-header">
      <h1> <i class="fa fa-chevron-right" aria-hidden="true"></i>General Ledger</h1>
    </div>
    <ul class="nav"> 
      <li class="nav-item">
        <%= link_to 'New Entry', new_business_entry_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Download PDF', new_volunteers_group_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Home', root_path, class: 'nav-link' %> 
      </li>
    </ul>


    <table class="table table-striped table-hover">
      <thead>
          <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Credit Balance</th>
          <th>Debit Balance</th>
          <th>Balance</td>
          </tr>
      </thead>

      <tbody>
        <% @accounts.each do |account| %>
          <tr class="<%= cycle("even", "odd") -%>">
            <td><%=h account.name %></td>
            <td><%=h account.type.sub('Plutus::','') %></td>
            <td><%=h account.credits_balance.round(2) %></td>
            <td><%=h account.debits_balance.round(2) %></td>
            <td><%=h account.balance.round(2) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


