<p id="notice"><%= notice %></p>

<div class="tables-wrapper">
  <div class="white-panel pn">
    <div class="white-header">
      <h1> <i class="fa fa-chevron-right" aria-hidden="true"></i> Listing Volunteers Groups</h1>
    </div>
    <ul class="nav"> 
      <li class="nav-item">
        <%= link_to 'New Volunteers group', new_volunteers_group_path, class: 'nav-link' %>
      </li>
    </ul>

    <table id="volunteers-group-table" class="table table-striped table-responsive table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @volunteers_groups.each do |volunteers_group| %>
          <tr>
            <td><%= volunteers_group.name %></td>
            <td><%= volunteers_group.description %></td>
            <td>
              <div class="dropdown">
                <button class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Actions <i class="fa fa-caret-down" aria-hidden="true"></i> 
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <li> <%= link_to 'Show', volunteers_group %> </li>
                  <li> <%= link_to 'Edit', edit_volunteers_group_path(volunteers_group) %> </li>
                  <li> <%= link_to 'Destroy', volunteers_group, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>


