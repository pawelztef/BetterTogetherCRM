<p id="notice"><%= notice %></p>

<h1>Listing Volunteers Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers_groups.each do |volunteers_group| %>
      <tr>
        <td><%= volunteers_group.name %></td>
        <td><%= volunteers_group.description %></td>
        <td><%= link_to 'Show', volunteers_group %></td>
        <td><%= link_to 'Edit', edit_volunteers_group_path(volunteers_group) %></td>
        <td><%= link_to 'Destroy', volunteers_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

