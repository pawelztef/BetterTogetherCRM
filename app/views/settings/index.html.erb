<p id="notice"><%= notice %></p>
<div class="tables-wrapper">
  <div class="white-panel pn">
    <div class="white-header">
      <h1> <i class="fa fa-chevron-right" aria-hidden="true"></i> App Settings</h1>
    </div>

    <%= simple_form_for @settings, html: {class: 'form-horizontal'} do |f| %> 
      <%= f.input :dashboard, as: :boolean  %> 
      <%= f.input :message, as: :boolean %> 
      <%= f.input :task, as: :boolean %> 
      <%= f.input :volunteer, as: :boolean %> 
      <%= f.input :dog, as: :boolean %> 
      <%= f.input :business, as: :boolean %> 
      <%= f.input :statistic, as: :boolean %> 
      <%= f.input :event, as: :boolean %> 
      <%= f.input :setting, as: :boolean %> 
      <%= f.button :submit, class: 'import' %> 
    <% end %> 

  </div>
</div>

