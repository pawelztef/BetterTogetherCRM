<%= simple_form_for @event, remote: true, html: {class: 'form-horizontal'} do |f| %>
  <%# create errors code %> 

  <%# <%= f.label :title %1> %> 
  <%# <%= f.text_field :title, class: 'form-control' %1> <br /> %> 
  <%= f.input :title, input_html: {class: "form-control" } %> 
  <%= f.input :start, as: :string, input_html: {class: "datepicker form-control", id: "startTime"} %> 
  <%# <%= f.label :start %1> %> 
  <%# <%= f.text_field :start, class: "datepicker form-control", id: "startTime" %1> <br /> %>
