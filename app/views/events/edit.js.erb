$('body').append('<%= j render("edit_form") %>');

$('#custom-event, #training, #transfer, #visit').css("display", "initial");

$(document).on('change', '#training-other-checkbox', function() {
  if( $('#training-other-checkbox').not(':checked')) {
    $('#event_training_attributes_other').html('');
  }
});


$('#editEvent').modal('show');
$(".closeEditEvent").on("click", function() {
  $("#editEvent").modal('hide');
});
$('body').on('hidden.bs.modal', '.modal', function (e) {
  $(e.target).removeData('bs.modal');
  $('.modal').remove();
});
