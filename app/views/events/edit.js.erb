<% if @sender %>
  let fullname;
  let email;
  let phone;
  let address;
  let radio;
  let sender;

  radio = $('#sender-radio').empty();
  fullname = $('#sender-fullname').empty();
  email = $('#sender-email').empty();
  phone = $('#sender-phone').empty();
  address = $('#sender-address').empty();
  sender = $('#sender_id');

  radio.html("<input type='radio' checked disabled>");
  fullname.html(" <%= @sender.fullname %> ");
  email.html(" <%= @sender.email %> ");
  phone.html(" <%= @sender.phone1 %> ");
  address.html(" <%= @sender.location.full_street_address %> ");
  sender.val(" <%= @sender.id %> ");
<% end %> 
