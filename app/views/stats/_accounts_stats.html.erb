<div class="row">
  <div class="col-md-12">
    <%= column_chart Stat.chart_data(@data) %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="volunteers-groups-stats-wrapper">
      <h4> <%= name %> Summary</h4>
      <table class="table table-striped table-hover">
        <% if accounts.count > 0%>
            <% running_total = 0 %>
            <% accounts.each do |account| %>
              <% balance = account.balance(:from_date => @from_date, :to_date => @to_date) %>
              <tr class="<%= cycle("even", "odd") -%>">
                <td><%=h account.name %></td>
                <td><%=h balance.round(2) %></td>
                <% running_total += balance %>
              </tr>
            <% end %>
            <tr class="<%= cycle("even", "odd") -%>">
              <strong>
                <td class='total'>Total <%= name %></td>
                <td class='total'><%= running_total.round(2) %></td>
              </strong>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
