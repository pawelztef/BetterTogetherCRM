<%= simple_form_for @dog, html: {class: 'form-horizontal'}  do |f| %>
  <%= f.error_notification %>

  <h3> <%= f.label "Dog details" %> </h3>
  <%= f.input :name %> 
  <%= f.input :chip_id %> 
  <%= f.input :age %> 
  <%= f.input :breed %> 


  <h3> <%= f.label "Client details" %> </h3>
  <%= f.simple_fields_for :client do |c| %>
    <%= c.input :first_name %> 
    <%= c.input :last_name %> 
    <%= c.input :email %> 
    <%= c.input :phone1 %> 
    <%= c.input :phone2 %> 
    <%= c.input :institution, as: :radio_buttons %> 
  <% end %> 


  <%# <h3> <%= f.label "Location" %1> </h3> %>
  <%# <%= render "application_partials/location_form", f: f  %1> %>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
