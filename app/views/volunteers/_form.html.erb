<%= simple_form_for @volunteer, html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :phone1 %>
    <%= f.input :phone2 %>
    
    <%= render "application_partials/location_form", f: f  %>
    
    <%= f.association :volunteers_groups, as: :check_boxes %>

  <div class="form-group">
    <%= f.button :submit, class: 'import' %>
  </div>
<% end %>
