<%= simple_form_for @volunteer, html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :phone1 %>
    <%= f.input :phone2 %>
    <%= f.association :volunteers_groups, as: :check_boxes %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
