    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th>Address</th>
      <%# <th colspan="2">Coordinates</th> %>
      <%# <th colspan="3">Actions</th> %>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.first_name %></td>
        <td><%= volunteer.last_name %></td>
        <td><%= volunteer.email %></td>
        <td><%= volunteer.phone1 %></td>
        <td><%= volunteer.phone2 %></td>
        <td><%= volunteer.location.full_street_address %></td>
        <%# <td><%= volunteer.location.latitude %1></td> %>
        <%# <td><%= volunteer.location.longitude %1></td> %>
        <%# <td><%= link_to 'Show', volunteer, remote: true %1></td> %>
