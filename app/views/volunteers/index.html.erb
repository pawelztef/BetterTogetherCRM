<p id="notice"><%= notice %></p>

<h1>Listing Volunteers</h1>

<table class="table table-striped table-responsive table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th>Address</th>
      <th colspan="2">Coordinates</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.first_name %></td>
        <td><%= volunteer.last_name %></td>
        <td><%= volunteer.email %></td>
        <td><%= volunteer.phone1 %></td>
        <td><%= volunteer.phone2 %></td>
        <td><%= volunteer.location.full_street_address %></td>
        <td><%= volunteer.location.latitude %></td>
        <td><%= volunteer.location.longitude %></td>
        <td><%= link_to 'Show', volunteer, remote: true %></td>
        <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
        <td><%= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

